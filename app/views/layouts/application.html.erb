<!DOCTYPE html>
<html>
<head>
  <title>Twitter</title>
  <%= tag :meta, :name => "fb-app-id", :content => "#{ENV['FB_APP_ID']}"%>
  <%= tag :meta, :name => "pusher-key", :content => "#{ENV['PUSHER_KEY']}"%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Twitter app', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li>
            <%= link_to "Sign out", signout_path, id: "sign_out_facebook" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>
</div>

<% unless current_user %>
  <div class="container">
    <%= render partial:'sessions/signin'%>
    <hr class='margin-bottom-md'/>
    <%= render partial: 'extra/readme'%>
  </div>
<% end %>

<%= yield %>

<div class="container-fluid footer-container">
  <%= render partial: 'extra/footer'%>
</div>

</body>
</html>
