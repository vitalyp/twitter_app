<!DOCTYPE html>
<html>
<head>
  <title>Personal message board. Owned by AriekDev (Vitaly Pestov), 2016.</title>
  <%= tag :meta, :name => "fb-app-id", :content => "#{ENV['FB_APP_ID']}"%>
  <%= tag :meta, :name => "pusher-key", :content => "#{ENV['PUSHER_KEY']}"%>
  <%= tag :meta, :name => "cur-user-id", :content => "#{current_user ? current_user.id : ''}"%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Fix unsupported property -->
  <%#= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
  <%= yield :head %>
  
  
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  
</head>
<body>
  
  <script>
  $( function() {
    $( "#dialog" ).dialog({
      autoOpen: false,
      show: {
        effect: "blind",
        duration: 1000
      },
      hide: {
        effect: "explode",
        duration: 1000
      },
      width: "850px"//,
      //maxWidth: "768px"
    });
 
    $( "#opener" ).on( "click", function() {
      $( "#dialog" ).dialog( "open" );
    });
  } );
  </script>
  
<div id="dialog" title="Basic dialog" width="1500px">
  <img src="http://orig03.deviantart.net/3c50/f/2016/248/c/a/lazyicon_i_wanna_use___12_by_jeyawue-dagjw81.gif">
  <%= image_tag 'msg.jpg' %>
</div>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Mir', root_path, class: 'navbar-brand' %>
      <%= image_tag 'http://i.neoseeker.com/m/168239_photo.gif' %>
      
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li>
            <p class="footer-logo"><%= image_tag("broavatar.jpg") %></p>
            <%#= link_to "Выйти", signout_path, id: "sign_out_facebook" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>
</div>

<% unless current_user %>
  <div class="container">
    <%= render partial:'sessions/signin'%>
    <hr class='margin-bottom-md'/>
    <%= render partial: 'extra/readme'%>
  </div>
<% end %>

<%= yield %>

<iframe width="100%" height="66" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/226340979&amp;color=3a9ae2&amp;auto_play=true&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false"></iframe>


<%# unless current_user %>
<!--
<iframe width="100%" height="128px" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/176209862&amp;color=00aabb&amp;auto_play=true&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
-->
<%# end %>

<div class="container-fluid footer-container">
  <%= render partial: 'extra/footer'%>
</div>

</body>
</html>
